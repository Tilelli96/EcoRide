{% extends 'base.html.twig' %}

{% block title %}Authentiication{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="register text-center p-2 m-5">
        <h1>Connexion</h1>

        {{ form_errors(registrationForm) }}
        {{ form_start(registrationForm) }}
        <div class="m-3 text-light">
            {{form_label(registrationForm.email)}}
            <br>
            {{form_widget(registrationForm.email)}}
        </div>
        <div class="m-3 text-light">
            {{form_label(registrationForm.plainPassword)}}
            <br>
            {{form_widget(registrationForm.plainPassword)}}
            {{ form_row(registrationForm.agreeTerms) }}
        </div>
        <a href="/inscription" class="text-light text-decoration-underline">Inscription</a>
        <div class="m-3 text-light">
            <button type="submit" class="btn text-light">Connexion</button>
        </div>
            {{ form_end(registrationForm) }}
        </div>
         
    </div>
{% endblock %}
